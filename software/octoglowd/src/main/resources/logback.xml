<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %relative [%thread] %-5level %logger{20} - %msg%n%xException</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="eu.slomkowski" level="DEBUG"/>

</configuration>
